	$(CC) @GCC_X_NONE@ -c vacall-x86_64-x32.s

vacall-x86_64-x32.s : $(srcdir)/vacall-x86_64-x32-linux.s
	cp $(srcdir)/vacall-x86_64-x32-linux.s vacall-x86_64-x32.s

